<div class="container">
  <div class="registration-container">
    <h2 class="registration-head">ログイン</h2>

    <div class="registration-form">
      <div class="single-content">
        <%= link_to "LINEでログインする", user_line_omniauth_authorize_path, method: :post, class: "btn-default btn-line" %>
        <%= link_to "Facebookでログインする", user_facebook_omniauth_authorize_path, method: :post, class: "btn-default btn-facebook" %>

        <%= form_with(model: resource, scope: resource_name, url: session_path(resource_name), class: "email-form") do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="field form-group">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, class: "input-default" %>
          </div>
        
          <div class="field form-group">
            <div class="password-text">
              <%= f.label :password, "パスワード" %>
              <%= link_to "パスワードを忘れた場合" , new_user_password_path, class: "link-blu" %><br/>
            </div>
            <%= f.password_field :password, autocomplete: "off", class: "input-default" %>
          </div>
        
          <div class="actions form-group">
            <%= f.submit "ログイン", class: "btn-default btn-gray" %>
            <% if devise_mapping.rememberable? %>
              <div class="remember_me">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </div>
  
          <%= link_to "アカウント登録はこちら", new_registration_path(resource_name), class: "link-login" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

